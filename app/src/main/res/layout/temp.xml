<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >


        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >


            <TextView
                android:id="@+id/text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"

                />


            <TextView
                android:id="@+id/text_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_toEndOf="@+id/text_1"

                />

            <view
                android:id="@+id/view_1"
                android:layout_width="2dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/text_1"
                android:layout_alignBottom="@+id/text_9"

                />

            <view
                android:id="@+id/view_2"
                android:layout_width="2dp"
                android:layout_toEndOf="@+id/text_1"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/text_2"
                android:layout_alignBottom="@+id/text_9"

                />

            <view
                android:id="@+id/view_3"
                android:layout_width="2dp"
                android:layout_toEndOf="@+id/text_2"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/text_2"
                android:layout_alignBottom="@+id/text_10"

                />


            <TextView
                android:id="@+id/text_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22"
                android:layout_below="@+id/text_1"

                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"


                />




            <TextView
                android:id="@+id/text_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22"
                android:layout_below="@+id/text_2"

                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_toEndOf="@+id/text_1"

                />


            <android.support.v7.widget.CardView

                android:id="@+id/card_view"

                android:layout_below="@+id/text_3"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                app:cardElevation="0dp"

                app:cardCornerRadius="12dp"


                >


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    >


                    <TextView
                        android:id="@+id/text_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="22"
                        android:gravity="center_vertical"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"


                        />




                    <TextView
                        android:id="@+id/text_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="22"


                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_toEndOf="@+id/text_5"

                        />






                </RelativeLayout>


            </android.support.v7.widget.CardView>




            <TextView
                android:id="@+id/text_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22"
                android:layout_below="@+id/card_view"

                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"


                />




            <TextView
                android:id="@+id/text_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22"
                android:layout_below="@+id/card_view"

                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_toEndOf="@+id/text_1"

                />




            <TextView
                android:id="@+id/text_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22"
                android:layout_below="@+id/text_7"

                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"


                />




            <TextView
                android:id="@+id/text_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22"
                android:layout_below="@+id/text_8"

                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_toEndOf="@+id/text_1"

                />












        </RelativeLayout>







    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"


        >



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            >



        <TextView
            android:id="@+id/text_11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="heeeeeeefdddfd"
            android:layout_gravity="center"


            />

            <android.support.v7.widget.CardView
                android:layout_width="60dp"
                android:layout_height="30dp"
                app:cardCornerRadius="14dp"
                android:layout_below="@+id/text_11"
                app:cardBackgroundColor="@color/light_blue"
                >


                <android.support.v7.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardBackgroundColor="@color/light_green_2"
                    app:cardCornerRadius="16dp"

                    >


                </android.support.v7.widget.CardView>



            </android.support.v7.widget.CardView>


        </RelativeLayout>


    </LinearLayout>





</LinearLayout>